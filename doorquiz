using UnityEngine;
using UnityEngine.UI;
using TMPro;

public class AnubisDoorQuiz : MonoBehaviour
{
    [Header("Door")]
    public Collider[] blockerColliders;

    [Header("UI")]
    public GameObject quizPanel;
    public TextMeshProUGUI feedbackText;

    [Header("Buttons")]
    public Button correctButton;
    public Button[] wrongButtons;

    [TextArea(1, 3)]
    public string correctMessage = "Your answer echoes with truth. Proceed.";

    [TextArea(1, 3)]
    public string wrongMessage = "Anubis rejects your claim. Try again.";

    private void Awake()
    {
        // Wire correct answer button
        if (correctButton != null)
        {
            correctButton.onClick.RemoveAllListeners();
            correctButton.onClick.AddListener(OnCorrectAnswer);
        }

        // Wire wrong answer buttons
        if (wrongButtons != null)
        {
            foreach (Button btn in wrongButtons)
            {
                if (btn == null) continue;
                btn.onClick.RemoveAllListeners();
                btn.onClick.AddListener(OnWrongAnswer);
            }
        }
    }

    private void Start()
    {
        // Door starts locked
        if (blockerColliders != null)
        {
            foreach (var col in blockerColliders)
            {
                if (col != null) col.enabled = true;
            }
        }

        if (feedbackText != null)
            feedbackText.text = "";
    }

    private void OnCorrectAnswer()
    {
        if (feedbackText != null)
            feedbackText.text = correctMessage;

        // Unlock door
        foreach (var col in blockerColliders)
        {
            if (col != null) col.enabled = false;
        }
    }

    private void OnWrongAnswer()
    {
        if (feedbackText != null)
            feedbackText.text = wrongMessage;
        // Door stays locked!
    }
}
